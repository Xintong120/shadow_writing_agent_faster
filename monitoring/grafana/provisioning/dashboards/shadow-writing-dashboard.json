{
  "id": null,
  "uid": "shadow-writing-dashboard",
  "title": "Shadow Writing Application Metrics",
  "tags": ["shadow-writing", "monitoring"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "id": 1,
      "title": "响应时间 P95",
      "type": "stat",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(app_request_duration_seconds_bucket[5m])) by (le, method, endpoint))",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 0.5 },
              { "color": "red", "value": 0.8 },
              { "color": "dark-red", "value": 1.2 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "错误率",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(app_errors_total[5m])) / sum(rate(app_requests_total[5m])) * 100",
          "legendFormat": "Error Rate %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 3 },
              { "color": "dark-red", "value": 5 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 }
    },
    {
      "id": 3,
      "title": "请求吞吐量 (RPM)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(rate(app_requests_total[1m])) * 60",
          "legendFormat": "Requests per Minute",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 800 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 }
    },
    {
      "id": 4,
      "title": "CPU 使用率",
      "type": "stat",
      "targets": [
        {
          "expr": "app_cpu_usage_percent",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 85 },
              { "color": "dark-red", "value": 95 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 }
    },
    {
      "id": 5,
      "title": "内存使用率",
      "type": "stat",
      "targets": [
        {
          "expr": "app_memory_usage_mb",
          "legendFormat": "Memory Usage",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "MB",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 80 },
              { "color": "red", "value": 90 },
              { "color": "dark-red", "value": 95 }
            ]
          }
        }
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 }
    },
    {
      "id": 6,
      "title": "活跃请求数",
      "type": "stat",
      "targets": [
        {
          "expr": "app_active_requests",
          "legendFormat": "Active Requests",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 }
    },
    {
      "id": 7,
      "title": "响应时间趋势",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(app_request_duration_seconds_bucket[5m])) by (le, method, endpoint))",
          "legendFormat": "P95 {{method}} {{endpoint}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, sum(rate(app_request_duration_seconds_bucket[5m])) by (le, method, endpoint))",
          "legendFormat": "P50 {{method}} {{endpoint}}",
          "refId": "B"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
    },
    {
      "id": 8,
      "title": "请求量按端点",
      "type": "barchart",
      "targets": [
        {
          "expr": "sum(rate(app_requests_total[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
    },
    {
      "id": 9,
      "title": "错误率按端点",
      "type": "table",
      "targets": [
        {
          "expr": "sum(rate(app_errors_total[5m])) by (endpoint) / sum(rate(app_requests_total[5m])) by (endpoint) * 100",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "refresh": "30s",
  "schemaVersion": 30,
  "version": 0,
  "links": []
}
