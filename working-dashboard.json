{
  "dashboard": {
    "id": null,
    "title": "Application Monitoring",
    "tags": ["monitoring"],
    "timezone": "Asia/Shanghai",
    "panels": [
      {
        "id": 1,
        "title": "CPU Usage %",
        "type": "stat",
        "targets": [
          {
            "expr": "app_cpu_usage_percent",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "orange", "value": 70 },
                { "color": "red", "value": 85 }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Memory Usage MB",
        "type": "stat",
        "targets": [
          {
            "expr": "app_memory_usage_mb",
            "legendFormat": "Memory MB",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MB"
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 }
      },
      {
        "id": 3,
        "title": "Requests per Minute",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(app_requests_total[1m])) * 60",
            "legendFormat": "Req/min",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 }
      },
      {
        "id": 4,
        "title": "Response Time P95",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(app_request_duration_seconds_bucket[5m])) by (le, method, endpoint))",
            "legendFormat": "P95 (s)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 }
      }
    ],
    "time": { "from": "now-1h", "to": "now" },
    "refresh": "30s"
  }
}
